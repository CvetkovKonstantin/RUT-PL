#include <stdio.h>
/**
 * @brief рассчитывает площадь прямоугольника
 * @param fistSide первая сторона прямоугольника
 * @param secondSide вторая сторона прямоугольника
 * @return возвращает рассчитанное значение
 */
double getPloshadPryamougolnika(const double firstSide, const double secondSide);
/**
 * @brief рассчитывает площадь треугольника
 * @param osnovanie основание треугольника
 * @param visota высота треугольника
 * @return возвращает рассчитанное значение
 */
double getPloshadTreugolnika(const double osnovanie, const double visota);
/**
 * @brief Точка входа в программу
 * @return возвращает 0, если программма выполнена корректно
 */
int main()
{
	double firstSide;
	double secondSide;
	printf("Введите первую сторону прямоугольника: ");
	scanf("%lf", &firstSide);
	printf("Введите вторую сторону прямоугольника: ");
	scanf("%lf", &secondSide);
	printf("Стороны равны %.2lf и %.2lf\n", firstSide, secondSide);
	printf("Площадь прямоугольника равна %.2lf\n", getPloshadPryamougolnika(firstSide, secondSide));

	double osnovanie;
	double visota;
	printf("Введите основание треугольника: ");
	scanf("%lf", &osnovanie);
	printf("Введите высоту треугольника: ");
	scanf("%lf", &visota);
	printf("Основание и высота равны соответственно %.2lf и %.2lf\n", osnovanie, visota);
	printf("Площадь треугольника равна %.2lf", getPloshadTreugolnika(osnovanie, visota));

	return 0;
}
double getPloshadTreugolnika(const double osnovanie, const double visota)
{
	return 0.5 * osnovanie * visota;
}
double getPloshadPryamougolnika(const double firstSide, const double secondSide)
{
	return firstSide * secondSide;
}
